<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF4E6"
    tools:context=".MainActivity">

    <!-- BARRA SUPERIOR -->

    <!-- Contenedor del Carrito (ahora anclado a la derecha) -->
    <FrameLayout
        android:id="@+id/cart_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/cart_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ver carrito"
            android:src="@drawable/ic_shopping_cart"
            app:tint="#5E4134" />

        <TextView
            android:id="@+id/cart_badge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="top|end"
            android:background="@drawable/badge_background"
            android:gravity="center"
            android:padding="3dp"
            android:textColor="@android:color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="1"
            tools:visibility="visible"/>
    </FrameLayout>

    <!-- Botón de Perfil (anclado a la izquierda del carrito) -->
    <ImageButton
        android:id="@+id/go_to_profile_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_profile"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Ver Perfil"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/cart_button_container"
        app:layout_constraintBottom_toBottomOf="@id/cart_button_container"
        app:layout_constraintEnd_toStartOf="@id/cart_button_container" />

    <!-- Botón de Login (en la misma posición que el de perfil) -->
    <TextView
        android:id="@+id/go_to_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Iniciar Sesión"
        android:gravity="center"
        android:visibility="visible"
        android:textColor="#5E4134"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/go_to_profile_button"
        app:layout_constraintBottom_toBottomOf="@id/go_to_profile_button"
        app:layout_constraintStart_toStartOf="@id/go_to_profile_button"
        app:layout_constraintEnd_toEndOf="@id/go_to_profile_button" />

    <!-- Título de la App (ahora ocupa el espacio restante) -->
    <TextView
        android:id="@+id/app_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="PANADERÍA DELICIA"
        android:fontFamily="sans-serif-medium"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textColor="#5E4134"
        app:layout_constraintTop_toTopOf="@id/cart_button_container"
        app:layout_constraintBottom_toBottomOf="@id/cart_button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/go_to_profile_button" />


    <!-- RESTO DEL LAYOUT (Buscador, Filtros, RecyclerView...) -->

    <EditText
        android:id="@+id/search_edittext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/search_background"
        android:hint="Buscar por nombre o tipo..."
        android:padding="12dp"
        android:maxLines="1"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/cart_button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/filters_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/search_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Filtro Saludable -->
        <LinearLayout
            android:id="@+id/filter_healthy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/filter_background"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_filter_healthy"
                app:tint="@color/filter_icon_tint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saludable"
                android:textSize="12sp"
                android:textColor="@color/filter_text_color" />
        </LinearLayout>

        <!-- Filtro Dulce -->
        <LinearLayout
            android:id="@+id/filter_sweet"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/filter_background"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_filter_sweet"
                app:tint="@color/filter_icon_tint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dulce"
                android:textSize="12sp"
                android:textColor="@color/filter_text_color" />
        </LinearLayout>

        <!-- Filtro Artesanal -->
        <LinearLayout
            android:id="@+id/filter_artisan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/filter_background"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_filter_artisan"
                app:tint="@color/filter_icon_tint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artesanal"
                android:textSize="12sp"
                android:textColor="@color/filter_text_color" />
        </LinearLayout>

        <!-- Filtro Bebida -->
        <LinearLayout
            android:id="@+id/filter_drink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:background="@drawable/filter_background"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_filter_drink"
                app:tint="@color/filter_icon_tint" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bebida"
                android:textSize="12sp"
                android:textColor="@color/filter_text_color" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/products_recycler_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="4dp"
        app:layout_constraintTop_toBottomOf="@id/filters_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_product"
        android:clipToPadding="false"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>