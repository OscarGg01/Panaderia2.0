<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado: seleccionado -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#5E4134" /> <!-- Color oscuro cuando estÃ¡ seleccionado -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <!-- Estado: por defecto -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparente por defecto -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>